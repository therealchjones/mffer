{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/mffer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ShowTimestamp"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOrder": "sequence",
			"isBuildCommand": true,
			"osx": {
				"options": {
					"env": {
						"PATH": "${config:terminal.integrated.env.osx.PATH}"
					}
				}
			}
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/mffer.csproj",
				"-c",
				"Release"
			],
			"problemMatcher": "$msCompile",
			"osx": {
				"options": {
					"env": {
						"PATH": "${config:terminal.integrated.env.osx.PATH}"
					}
				}
			}
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"${workspaceFolder}/mffer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "apkdl",
			"type": "shell",
			"command": "${workspaceFolder}/src/scripts/apkdl",
			"args": [
				"-v",
				"-o",
				"${workspaceFolder}/data"
			],
			"detail": "Download and extract the latest version of Marvel Future Fight",
			"isBackground": false,
			"promptOnClose": true,
			"problemMatcher": [],
			"osx": {
				"options": {
					"env": {
						"PATH": "${config:terminal.integrated.env.osx.PATH}"
					}
				}
			}
		}
	]
}
