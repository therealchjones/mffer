{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/mffer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOrder": "sequence"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/mffer.csproj",
				"-c",
				"Release"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"${workspaceFolder}/mffer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "autoextract",
			"type": "shell",
			"command": "${workspaceFolder}/src/autoextract",
			"args": [
				"-v",
				"-o",
				"${workspaceFolder}/data"
			],
			"detail": "Download and extract the latest version of Marvel Future Fight",
			"isBackground": false,
			"promptOnClose": true,
			"problemMatcher": []
		}
	]
}
